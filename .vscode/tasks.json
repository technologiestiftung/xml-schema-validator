{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "python",
      "dockerBuild": {
        "tag": "xmlschemavalidatorv2:latest",
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "FLASK_APP": "app.py"
        }
      },
      "python": {
        "args": [
          "run",
          "--no-debugger",
          "--no-reload",
          "--host",
          "0.0.0.0",
          "--port",
          "3333"
        ],
        "module": "flask"
      }
    }
  ]
}
